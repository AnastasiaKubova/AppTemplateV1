<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Demo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <style name="singleRipple">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="iconBrand">
        <item name="android:tint">@color/primary_dark</item>
    </style>

    <style name="iconGreen">
        <item name="android:tint">@color/green</item>
    </style>

    <style name="iconMenu">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="mainText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:drawableTint">@color/primary_dark</item>
    </style>

    <style name="errorText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textError</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="mainButton">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_main_button</item>
    </style>

    <style name="secondaryButton" parent="mainButton">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="logoutButton" parent="secondaryButton">
        <item name="android:textColor">@color/buttonLogoutBackground</item>
    </style>

    <style name="mainEditInputText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="editText">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="backgroundView">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Start bottom sheet dialog style.  -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_8</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_8</item>
        <item name="cornerSizeBottomRight">@dimen/corner_no_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_no_radius</item>
    </style>
    <!-- End bottom sheet dialog style.  -->
</resources>